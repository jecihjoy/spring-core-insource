<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
            default-init-method="myInit" default-destroy-method="beanCleanup">

    <bean id="parentTriangle" class="com.example.sfjavabrains.Triangle" scope="singleton">
        <property name="pointA" ref="pointA"/>
    </bean>

    <bean id="triangle" class="com.example.sfjavabrains.Triangle" scope="singleton" parent="parentTriangle">
        <property name="pointB" ref="pointB"/>
        <property name="pointC" ref="pointC"/>
    </bean>

    <bean id="pointA" class="com.example.sfjavabrains.Point">
        <constructor-arg index="0" value="${pointA.pointX}"/>
        <constructor-arg index="1" value="${pointA.pointY}"/>
    </bean>

    <bean id="pointB" class="com.example.sfjavabrains.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointC" class="com.example.sfjavabrains.Point">
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>

<!--    must be defined here for it to work-->
    <bean class="com.example.sfjavabrains.DisplayNameBeanPostProcessor"/>
    <bean class="com.example.sfjavabrains.BeanFactoryPostProcessorExample"/>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="pointsconfig.properties"/>
    </bean>
</beans>